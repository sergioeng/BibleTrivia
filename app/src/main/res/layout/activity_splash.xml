<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/splash_bg">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="36dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="@string/app_name" />

    <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_lupasloucas"/>

    <TextView
        android:id="@+id/txtWebSite"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:textSize="12dp"
    android:textColor="#454545"
    android:gravity="center_horizontal"
    android:layout_alignParentBottom="true"
    android:text="www.dodsoneng.com" />

    <TextView
        android:id="@+id/txtDevName1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="14dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_above="@+id/txtWebSite"
        android:text="Thomas Dodson" />
    <TextView
        android:id="@+id/txtDevName2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_above="@+id/txtDevName1"
        android:text="Sergio Eng" />

</RelativeLayout>
