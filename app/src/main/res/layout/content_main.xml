<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dodsoneng.improvpicker.PickerActivityOOLD"
    tools:showIn="@layout/activity_picker"
    android:scrollIndicators="right">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text1"
                android:textOff="@string/cbox_text1"
                android:id="@+id/toggleButton1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="true"
                android:contextClickable="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TEST 1"
                android:id="@+id/textView1"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="100"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textStyle="bold|italic"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>

        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text2"
                android:textOff="@string/cbox_text2"
                android:id="@+id/toggleButton2"
                android:checked="true"
                android:layout_below="@+id/toggleButton1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TEST 2"
                android:id="@+id/textView2"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="true"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true" />
        </TableRow>

        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text3"
                android:textOff="@string/cbox_text3"
                android:id="@+id/toggleButton3"
                android:checked="true"
                android:textAlignment="center"
                android:layout_below="@+id/toggleButton2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView3"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>

        <TableRow android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text4"
                android:textOff="@string/cbox_text4"
                android:id="@+id/toggleButton4"
                android:checked="true"
                android:textAlignment="center"
                android:layout_below="@+id/toggleButton3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView4"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>
        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text5"
                android:textOff="@string/cbox_text5"
                android:id="@+id/toggleButton5"
                android:checked="true"
                android:layout_below="@+id/toggleButton4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView5"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent" />
        </TableRow>
        <TableRow android:showDividers="beginning|end">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text6"
                android:textOff="@string/cbox_text6"
                android:id="@+id/toggleButton6"
                android:checked="true"
                android:layout_below="@+id/toggleButton5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView6"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>
        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text7"
                android:textOff="@string/cbox_text7"
                android:id="@+id/toggleButton7"
                android:checked="true"
                android:layout_below="@+id/toggleButton6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView7"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:backgroundTint="@android:color/transparent"
                android:background="@android:color/transparent" />
        </TableRow>
        <TableRow>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text8"
                android:textOff="@string/cbox_text8"
                android:id="@+id/toggleButton8"
                android:checked="true"
                android:layout_below="@+id/toggleButton7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView8"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>
        <TableRow android:paddingBottom="10dp">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="@string/cbox_text9"
                android:textOff="@string/cbox_text9"
                android:id="@+id/toggleButton9"
                android:checked="true"
                android:layout_below="@+id/toggleButton8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textView9"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold|italic"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_bright"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent" />
        </TableRow>
